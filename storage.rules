rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@rydercup.local';
    }

    // Tournament media (photos, videos)
    match /tournaments/{tournamentId}/{allPaths=**} {
      // Anyone authenticated can read
      allow read: if isSignedIn();
      // Anyone authenticated can upload
      allow create: if isSignedIn()
                   && request.resource.size < 10 * 1024 * 1024 // 10MB limit
                   && request.resource.contentType.matches('image/.*|video/.*');
      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Course images
    match /courses/{courseId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Player profile photos
    match /players/{playerId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Players can update their own photo
    }

    // Honours board photos
    match /honours/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
  }
}
